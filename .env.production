# Production Configuration for Render Deployment
# Copy this to your Render environment variables

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://question_bank_user:your_password_here@your-postgres-host:5432/question_bank

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# JWT Configuration
JWT_SECRET_KEY=your_production_jwt_secret_key_make_it_long_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Configuration (Update with your Render frontend URL)
FRONTEND_URL=https://your-app-name.onrender.com

# Render-specific
PORT=8000